<?xml version="1.0" encoding="utf-8"?>  
<shape xmlns:android="http://schemas.android.com/apk/res/android"  
    android:shape="rectangle" >  
  
    <stroke
        android:width="0.5dip"
        android:color="#ffe7d9c5" />
    <!-- 填充的颜色 -->  
    <solid android:color="#ffaf60" />  
  
    <!-- 设置按钮的四个角为弧形 -->  
    <!-- android:radius 弧形的半径 -->  
    <corners android:radius="15dip" />  
  
    <!-- 渐变 -->
     <gradient
        android:angle="270.0"
        android:endColor="#ffffff"
        android:startColor="#ffff8c00" />
     
     
    <!-- padding：Button里面的文字与Button边界的间隔 -->  
    <padding  
        android:bottom="10dp"  
        android:left="10dp"  
        android:right="10dp"  
        android:top="10dp" />  
        
     <selector>    
    <item android:state_pressed="true" android:drawable="@android:color/holo_red_dark"/>
    <item android:drawable="@android:color/holo_orange_light"/>
    </selector>
</shape>  